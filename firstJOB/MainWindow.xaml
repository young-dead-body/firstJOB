<Window x:Class="firstJOB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:firstJOB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="Resources/icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="393*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="То что нам вернула ардуинка" Grid.Column="1" HorizontalAlignment="Left" Margin="29,37,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox" Grid.Column="1" HorizontalAlignment="Left" Height="232" Margin="34,68,0,0" VerticalAlignment="Top" Width="172"/>
        <ProgressBar Grid.Column="1" HorizontalAlignment="Left" Height="11" Margin="34,345,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="label_Copy" Content="Сколько нам вернула ардуинка" Grid.Column="1" HorizontalAlignment="Left" Margin="29,314,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
